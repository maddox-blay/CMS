<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="main" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefWidth="400.0" spacing="24.0" stylesheets="@AddNew.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo.AddNew">
    <children>
      <HBox alignment="TOP_RIGHT" prefWidth="200.0">
         <children>
            <Hyperlink contentDisplay="RIGHT" onAction="#closePopup" text="x">
               <font>
                  <Font name="Work Sans Medium" size="20.0" />
               </font>
            </Hyperlink>
         </children>
      </HBox>
        <TextField fx:id="searchField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="360.0" promptText="Search" style="-fx-background-radius: 0;">
            <font>
                <Font name="Work Sans Medium" size="20.0" />
            </font>
        </TextField>
      <ScrollPane fitToWidth="true" maxHeight="-Infinity" prefHeight="102.0" prefWidth="376.0">
         <content>
      
              <VBox fx:id="courseContainer" prefHeight="96.0" prefWidth="373.0" spacing="10">
              </VBox>
         </content>
      </ScrollPane>

        <Button fx:id="addButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-radius: 0;" text="Add">
            <font>
                <Font name="Work Sans Medium" size="20.0" />
            </font>
        </Button>
    </children>
    <padding>
        <Insets bottom="32.0" left="10.0" right="10.0" />
    </padding>
</VBox>
